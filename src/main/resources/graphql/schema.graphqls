type Query {
    # Пользователь
    user(id: ID!): User
    users: [User]

    # Резюме
    resume(id: ID!): Resume
    resumes(count: Int!): [Resume]
    resumesByUser(userId: ID!): [Resume]

    # Стартапы
    startup(id: ID!): Startup
    startups(count: Int!): [Startup]
    startupsByUser(userId: ID!): [Startup]
    allStartups: [Startup]

    # Ai
    askAiMagically(prompt: String!): String
}

type Mutation {
    # Пользователь
    createUser: User

    # Резюме
    createResume(
        name: String!
        description: String!
        region: String!
        stack: [String!]!
        race: String!
        contacts: String!
        userId: ID!
    ): Resume

    updateResume(
        id: ID!,
        name: String,
        description: String,
        region: String,
        stack: [String],
        race: String,
        contacts: String
    ): Resume

    deleteResume(id: ID!): Boolean!

    # Стартапы
    createStartup(
        name: String!
        description: String!
        region: String!
        stack: [String!]!
        contacts: String!
        userId: ID!
    ): Startup

    updateStartup(
        id: ID!,
        name: String,
        description: String,
        stack: [String],
        region: String,
        contacts: String
    ): Startup

    deleteStartup(id: ID!): Boolean!
}

type User {
    id: ID!
    createdAt: String!
}

type Resume {
    id: ID!
    name: String
    description: String
    region: String
    stack: [String]
    race: String
    contacts: String
    userId: ID!
}

type Startup {
    id: ID!
    name: String
    description: String
    stack: [String]
    region: String
    contacts: String
    userId: ID!
}
